{
  "name": "eng-player",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "yarn clean && concurrently -n \"RENDERER,MAIN+ELECTRON\" -c \"magenta,green\" \"yarn client\" \"yarn server\"",
    "server": "tsc -w & wait-on dist/main/main.js && nodemon --delay 2 --watch dist/main --exec \"npx tsc-alias && npx electron .\"",
    "client": "vite",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:main && yarn build:renderer && electron-builder",
    "build:main": "tsc && tsc-alias",
    "build:renderer": "vite build",
    "lint": "npx eslint --quiet \"src/**/*.{ts,tsx}\"",
    "type": "yarn tsc --noEmit --p tsconfig.json"
  },
  "build": {
    "appId": "com.kaptor.engplayer",
    "productName": "EngPlayer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sql.js/dist/*.wasm"
    ],
    "npmRebuild": true,
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "dependencies": {
    "@stylexjs/babel-plugin": "^0.17.0",
    "@stylexjs/postcss-plugin": "^0.17.0",
    "@stylexjs/stylex": "0.17.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reflect-metadata": "0.2.2",
    "sql.js": "^1.13.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@stylexjs/eslint-plugin": "^0.17.0",
    "@types/node": "24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "8.2.0",
    "electron": "26.1.0",
    "electron-builder": "24.6.0",
    "eslint": "8",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "nodemon": "3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2",
    "vite": "7.2.1",
    "vite-plugin-electron-renderer": "0.14.6",
    "wait-on": "7.0.1"
  }
}
