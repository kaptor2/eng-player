{
  "name": "eng-player",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "yarn clean && concurrently -n \"RENDERER,MAIN+ELECTRON\" -c \"magenta,green\" \"yarn client\" \"yarn server\"",
    "server": "tsc -w & wait-on dist/main/main.js && nodemon --delay 2 --watch dist/main --exec \"npx tsc-alias && npx electron .\"",
    "client": "vite",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:main && yarn build:renderer && electron-builder",
    "build:main": "tsc && tsc-alias",
    "build:renderer": "vite build"
  },
  "build": {
    "appId": "com.kaptor.engplayer",
    "productName": "EngPlayer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sql.js/dist/*.wasm"
    ],
    "npmRebuild": true,
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "8.2.0",
    "electron": "26.1.0",
    "electron-builder": "24.6.0",
    "nodemon": "3.1.10",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2",
    "vite": "7.2.1",
    "vite-plugin-electron-renderer": "0.14.6",
    "wait-on": "7.0.1"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reflect-metadata": "0.2.2",
    "sql.js": "^1.13.0",
    "typeorm": "^0.3.27"
  }
}
